<assembly>
	<id>${version}</id>
	<formats>
		<format>zip</format>
	</formats>
	<!-- <includeBaseDirectory>true</includeBaseDirectory>-->

	<dependencySets>
		<dependencySet>
			<!--不使用项目的artifact，第三方jar不要解压，打包进zip文件的lib目录-->
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<!--将配置文件打包到根目录-->
		<fileSet>
			<directory>${project.build.directory}/${project.artifactId}/conf</directory>
			<outputDirectory>/conf</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
			<excludes>
				<exclude>assembly.xml</exclude>
				<exclude>*.sh</exclude>
			</excludes>
		</fileSet>
		<!--将项目jar 打到zip中-->
		<fileSet>
			<directory>${project.build.directory}/${project.artifactId}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<!-- 将脚本以及脚本配置文件打包 -->
		<fileSet>
			<directory>src/main/resources/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
		
		<!--
		<fileSet>
			<directory>src/main/resources/</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.sh</include>
                <include>*.conf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/conf/</outputDirectory>
			<includes>
				<include>*.*</include>
			</includes>
		</fileSet>
         -->
	</fileSets>
</assembly>